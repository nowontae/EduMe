<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.edume.student">
  	<insert id="declarationSubmit" >
  		insert into declaration values(declaration_idx.nextval, 3, 4, 1, '신고 테스트', sysdate, 0)
  	</insert>
  
    <insert id="commonQnaInsert" parameterType="com.edume.student.model.CommonQnaDTO">
  		insert into commonQna 
  		values(commonQna_idx.nextval, ${midx}, '${cqsubject}', '${cqcontent}', sysdate, 'N')
  	</insert>
  
  
  	<select id="getWishList" parameterType="int" resultType="com.edume.lecture.model.LectureDTO">
  		select lecture.*
  		from lecture, 
	 		(select w.lidx
	 		from wishList w
	 		where midx=#{midx}) wl
		where lecture.lidx = wl.lidx
  	</select>
  	
  	<insert id="addWishList" parameterType="Map" >
  		insert into wishlist values(#{midx}, #{lidx})
  	</insert>
  	
  </mapper>