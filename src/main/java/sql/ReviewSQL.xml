<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.edume.admin_review">
  <!-- 전체 리뷰 글 리스트  사용x-->
  <select id="reviewAllList" resultType="com.edume.admin.model.ReviewDTO">
  		select * from review order by ridx desc
  </select>
  <!-- 강의 상세 페이지의 댓글 부분 출력-->
  <select id="reviewList_lectureDetail" resultType="com.edume.admin.model.ReviewDTO">
  		select m.mid,m.mimg, r.*
			from member m, review r
			where m.midx=r.midx 
			and lidx=#{lidx}
			and ropen='Y'
  </select>
  
  </mapper>