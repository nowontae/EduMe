<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.edume.admin.category">
 <!-- 대분류 -->
 <select id="Category1List" resultType="com.edume.admin.model.Category1DTO">
 	select * from category1 order by cat1_idx
 </select>
 <insert id="Category1Add">
 	INSERT INTO Category1 VALUES(Category1_IDX.nextval, #{cat_name})
 </insert>
 <delete id="Category1Delete">
 	delete from category1 where cat1_idx=#{cat1_idx}
 </delete>
 <delete id="Category1_2Delete">
 	delete from category2 where cat1_idx=#{cat1_idx}
 </delete>
 <delete id="Category1_3Delete">
 	delete from category3 where cat1_idx=#{cat1_idx}
 </delete>
 
 <!-- 중분류 -->
 <select id="Category2List" resultType="com.edume.admin.model.Category2DTO">
 	select * from category2 where cat1_idx=#{cat1_idx} order by cat2_idx
 </select>
 <insert id="Category2Add">
 	INSERT INTO CATEGORY2 VALUES(#{cat1_idx},Category2_IDX.nextval, #{cat_name})
 </insert>
 <delete id="Category2Delete">
 	delete from category2 where cat2_idx=#{cat2_idx}
 </delete>
  <delete id="Category2_3Delete">
 	delete from category3 where cat2_idx=#{cat2_idx}
 </delete>
 <!-- 소분류 -->
<select id="Category3List"  resultType="com.edume.admin.model.Category3DTO">
	select * from category3 where cat1_idx=#{cat1_idx} and cat2_idx=#{cat2_idx} order by cat3_idx
</select>
 <insert id="Category3Add">
	INSERT INTO CATEGORY3 VALUES(#{cat1_idx},#{cat2_idx},Category3_IDX.nextval, #{cat_name})
 </insert>
  <delete id="Category3Delete">
 	delete from category3 where cat3_idx=#{cat3_idx}
 </delete>
 </mapper>