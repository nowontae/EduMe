<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="teacherBoardReview">

<!-- 후기 메인페이지 -->
  <select id="teacherReviewMain" resultType="com.edume.teacherBoardReview.model.TeacherBoardReviewDTO">
  select * 
	from (select rownum as rnum,a.* 
    from (select b.* 				<!-- 강사 고유번호를 받아서 강의DB의 강의고유번호를 a, 후기를 b-->
	from (select lecture.lidx from lecture where midx=#{midx}) a, review b
	where a.lidx=b.lidx) a) b order by ridx desc <!-- 둘의 강의 고유번호가 같으면-->
  </select>
  
  <!-- 강의이름으로 리스트 불러오기 -->
  <select id="teacherLectureReview" resultType="com.edume.teacherBoardReview.model.TeacherBoardReviewDTO">
	
  </select>
</mapper>