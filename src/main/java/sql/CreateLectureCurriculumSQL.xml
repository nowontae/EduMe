<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edume.createLectureCurriculum">

	<select id="createLectureAll" parameterType="Integer" resultType="com.edume.createLecture.model.CreateLectureDTO">
	select * from lecture_fake where lidx=#{lidx}
	</select>
	
	<insert id="createLectureInsert1" parameterType="com.edume.createLecture.model.CreateLectureDTO">
	<selectKey keyProperty="lidx" resultType="int" order="BEFORE">
		select lecture_idx.nextval from dual
	</selectKey>
		insert into lecture values(#{lidx},#{midx},#{ltitle},#{lsubtitle},#{llevel},#{lthumnail},#{lsummary},#{lpurpose},#{lorignprice},#{ltarget},#{lknowledge},#{cat1_idx},#{cat2_idx},#{cat3_idx},sysdate,'N')
	</insert>
	
	<insert id="createLectureTeacherDiscount">
		insert into lectureTeacherDiscount values(#{lidx},0,sysdate,'2999-12-31')
	</insert>
	
	<insert id="createLectureAdminDiscount">
		insert into lectureAdminDiscount values(#{lidx},0,sysdate,'2999-12-31')
	</insert>
	<select id="lidxSearch" parameterType="com.edume.createLecture.model.CreateLectureDTO" resultType="Integer"> 
	select lidx from lecture where ltitle=#{ltitle} and lsubtitle=#{lsubtitle} and lknowledge=#{lknowledge}
	</select>
	
	<insert id="lectureCurriculumSubmit" parameterType="com.edume.createLectureCurriculum.model.CreateLectureCurriculumDTO">
	 insert into LectureCurriculum values(#{lidx},#{lcsection},#{lcpart},#{lctitle},#{lcvideo},#{lcsample})
	</insert>
	
	
	<delete id="createLectureDelete">
	delete lecture_fake where lidx=#{lidx}
	</delete>
</mapper>