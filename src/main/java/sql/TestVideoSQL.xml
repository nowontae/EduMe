<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="admin_Testvideo">
  <!-- 관리자페이지: 테스트 동영상 관리 전체 보기  -->
  <select id="TestVideoAllList" resultType="com.edume.admin_teacher.model.TestVideoDTO">
  	<!--  select * from TestVideo order by tvidx-->
  	select * from
			(select rownum as rnum, a.* from	      
			(select * from TestVideo order by tvidx asc)a)b
			where rnum <![CDATA[>=]]> #{start} and rnum <![CDATA[<=]]> #{end}
  </select>
    <!-- 관리자페이지: 테스트 동영상 관리 본문 보기  -->
  <select id="TestVideoContent_Management" resultType="com.edume.admin_teacher.model.TestVideoDTO">
  	select * from TestVideo where tvidx=#{tvidx}
  </select>
    <!-- 관리자페이지: 테스트 동영상 관리 본문 보기 -코멘트 달기 -->
  <select id="TestVideoContent_tvcommentAdd">
  	update testvideo set tvcomment=#{tvcomment} where tvidx=#{tvidx}
  </select>
  <!-- 총게시물수  -->
  <select id="TestVideo_TotalCnt" resultType="Integer">
  			select 
  				count(*)
  			from 
  				TestVideo
  	</select>
  </mapper>